<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/water_image_slide"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/water"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_text_slide"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="제품명"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/maruburisemibold"
        app:layout_constraintStart_toStartOf="@+id/water_image_slide"
        app:layout_constraintTop_toBottomOf="@+id/water_image_slide" />

</androidx.constraintlayout.widget.ConstraintLayout>