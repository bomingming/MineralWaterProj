<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notice_loc_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/maruburisemibold"
        android:text="지역을 선택하세요"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/maruburisemibold"
        android:text="선택한 지역에서 제조된 제품만 추천받을 수 있어요"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_loc_dialog" />

    <TextView
        android:id="@+id/notice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/maruburisemibold"
        android:text="지역을 선택하지 않으면 전체 결과를 볼 수 있어요"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice2" />


    <RadioGroup
        android:id="@+id/loc_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checkedButton="@id/loc_radio1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice3">

        <RadioButton
            android:id="@+id/loc_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="선택 안 함" />

        <RadioButton
            android:id="@+id/loc_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="경기도" />

        <RadioButton
            android:id="@+id/loc_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="강원도" />

        <RadioButton
            android:id="@+id/loc_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="경상도" />

        <RadioButton
            android:id="@+id/loc_radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="충청도" />

        <RadioButton
            android:id="@+id/loc_radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="전라도" />

        <RadioButton
            android:id="@+id/loc_radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maruburisemibold"
            android:text="제주도" />

    </RadioGroup>

    <TextView
        android:id="@+id/notice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburisemibold"
        android:text="지역 선택 버튼을 눌러야 지역이 선택됩니다!"
        android:textColor="#DC143C"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loc_group"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburisemibold"
        android:text="적용"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/select_loc_btn"
        app:layout_constraintTop_toBottomOf="@+id/notice4"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/select_loc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/maruburisemibold"
        android:text="지역 선택"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice4" />

</androidx.constraintlayout.widget.ConstraintLayout>